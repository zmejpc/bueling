{% trans_default_domain 'FrontendBundle' %}
<div class="product-form__holder">
    {% if product_page is defined and product_page %}
        {% if product.sizes is empty %}
            <button class="btn btn--theme--primary btn--big btn--inactive btn__select W(140px)--xs-lg" type="button">
                <div class="btn__inner"><span class="btn__text">{{ 'product.not_in_stock'|trans }}</span></div>
            </button>
        {% else %}
            <button class="btn btn--theme--primary btn--big btn--inactive btn__select W(140px)--xs-lg" type="button">
                <div class="btn__inner"><span class="btn__text">{{ 'ui.buy_btn'|trans }}</span></div>
            </button>
            <button class="btn btn--with-icon btn--theme--primary btn--hidden btn--big js-add-to-cart W(140px)--xs-lg {{ class is defined ? class }}" disabled="disabled">
                <div class="btn__inner">
                    <svg class="svg-icon btn__icon" aria-hidden="true">
                        <use xlink:href="{{ asset('build/frontend/img/icons/svg/sprite.symbol.svg') }}#bag"></use>
                    </svg>
                    <span class="btn__text">{{ 'ui.buy_btn'|trans }}</span></div>
            </button>
        {% endif %}
    {% else %}
        <a class="btn btn--with-icon btn--theme--primary btn--adaptive product__button {{ class is defined ? class }}"
           href="{{ path('frontend_product_show', {slug: product.translations[product.defaultLocale].slug, _locale: app.request.locale}) }}">
            <div class="btn__inner">
                <svg class="svg-icon btn__icon" aria-hidden="true">
                    <use xlink:href="{{ asset('build/frontend/img/icons/svg/sprite.symbol.svg') }}#bag"></use>
                </svg>
                <span class="btn__text">{{ 'ui.btn_details'|trans }}</span>
            </div>
        </a>
    {% endif %}
</div>