{% trans_default_domain 'FrontendBundle' %}
{% extends 'base.html.twig' %}

{% block main %}
    <section class="blog">
        <div class="container">
            <div class="blog__title">
                <h2 class="h2 blog__title-main">
                    {{ staticContent.top.title }}
                </h2>
            </div>
            <div class="blog__subtitle">
                {{ staticContent.top.short_text|striptags }}
            </div>
            <div class="blog__buttons__wrap">
                {% for category in categories %}
                    <div class="blog__button product__areas--item" data-index="{{ loop.index0 }}" data-enabled="true">
                        <a href="#" class="btn btn--primary btn--small">
                            <div class="btn__inner">
                                <span class="btn__text">{{ category.translate.title }}</span>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="news__wrap">
                {% for item in news %}
                    <div class="news__wrap-item">
                        <a href="{{ path('frontend_news_show', {slug: item.translate(item.defaultLocale).slug}) }}">

                            {% set poster = item.galleryImages|first.img|default('')|json_decode %}

                            <img src="{{ asset(poster.list_355_200|default('')) }}" alt="{{ item.translate.title }}" class="news__wrap-item--img">
                        </a>
                        <p class="news__wrap-item--date">
                            {{ item.publishAt|localizeddate('medium', 'none') }}
                        </p>
                        <div class="news__wrap-item-content">
                            <a href="{{ path('frontend_news_show', {slug: item.translate(item.defaultLocale).slug}) }}">
                                <p class="news__wrap-item-content--title">
                                    {{ item.translate.title }}
                                </p>
                            </a>
                            <a href="{{ path('frontend_news_show', {slug: item.translate(item.defaultLocale).slug}) }}" class="news__wrap-item-content--more">
                                {{ 'ui.read_more'|trans }}
                                <svg class="svg-icon news__wrap-item--icon">
                                    <use xlink:href="{{ asset('build/frontend/img/icons/svg/sprite.symbol.svg') }}#arrow-right" />
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
          </div>
          <div class="pagination pagination__wrap">
            <ul class="pagination__list">
              <li class="pagination__item" data-page="1"><a href="blog.html?page=1" data-index="1" class="pagination__link pagination__link--active"><span class="pagination__text">1</span></a></li>
              <li class="pagination__item" data-page="2"><a href="blog.html?page=2" data-index="2" class="pagination__link"><span class="pagination__text">2</span></a></li>
              <li class="pagination__item" data-page="3"><a href="blog.html?page=3" data-index="3" class="pagination__link"><span class="pagination__text">3</span></a></li>
              <li class="pagination__item" data-page="4"><a href="blog.html?page=4" data-index="4" class="pagination__link"><span class="pagination__text">4</span></a></li>
              <li class="pagination__item" data-page="5"><a href="blog.html?page=5" data-index="5" class="pagination__link"><span class="pagination__text">5</span></a></li>
            </ul>
          </div>
        </div>
    </section>
{% endblock %}

{% block script %}
    <script src="{{ asset('build/frontend/js/product.js') }}{{ assetVersion }}"></script>
{% endblock %}